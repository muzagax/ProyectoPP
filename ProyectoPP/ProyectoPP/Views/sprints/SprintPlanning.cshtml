@using ProyectoPP.Models
@model ProyectoPP.Models.sprint

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sprint Planning</h2>
<br><br>

<div class="form-group">

    @Html.Label("Proyecto", htmlAttributes: new { @class = "control-label col-md-1" })

    @Html.DropDownListFor(m => m.proyectoId, (SelectList)ViewBag.Proyecto, "", htmlAttributes: new { @class = "form-control col-md-2", onchange = "$(\"#proyectoForm\").submit()" })
    @Html.ValidationMessageFor(model => model.proyectoId, "", new { @class = "text-danger" })

    @Html.Label("Sprint", htmlAttributes: new { @class = "control-label col-md-1 col-md-offset-3" })

    @Html.DropDownListFor(m => m.id, (SelectList)ViewBag.Sprint, "", htmlAttributes: new { @class = "form-control col-md-1", onchange = "$(\"#proyectoForm\").submit()" })
    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })

</div>

<br><br><br><br>

<table class="table">
    <tr>

        <th>
            ID
        </th>

        <th>
            Alias
        </th>

        <th>
            Resultado
        </th>
        
        <th>
            Prioridad
        </th>
        
        <th>
            Estimación
        </th>
             
    </tr>

    @foreach (var item in (List<historiasDeUsuario>)ViewBag.HU)
    {
        <tr>
            <th>
                @Html.Raw(item.id)
            </th>

            <th>
                @Html.Raw(item.funcionalidad)
            </th>

            <th>
                @Html.Raw(item.resultado)
            </th>

            <th>
                @Html.Raw(item.prioridad)
            </th>

            <th>
                @Html.Raw(item.estimacion)
            </th>

            <td>
                @Html.ActionLink("Planificar", "Details", "historiasDeUsuarios", new { id = item.id }, null)
            </td>
        </tr>
    }

</table>







