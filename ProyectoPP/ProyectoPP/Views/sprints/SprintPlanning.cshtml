@model ProyectoPP.Models.sprint

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sprint Planning</h2>
<br><br>

<div class="form-group">

    @Html.Label("Proyecto", htmlAttributes: new { @class = "control-label col-md-1" })

    @Html.DropDownListFor(m => m.proyectoId, (SelectList)ViewBag.Proyecto, "", htmlAttributes: new { @class = "form-control col-md-2", onchange = "$(\"#proyectoForm\").submit()" })
    @Html.ValidationMessageFor(model => model.proyectoId, "", new { @class = "text-danger" })

    <br><br>

    @Html.Label("Sprint", htmlAttributes: new { @class = "control-label col-md-1" })

    @Html.DropDownListFor(m => m.id, (SelectList)ViewBag.Sprint, "", htmlAttributes: new { @class = "form-control col-md-1", onchange = "$(\"#proyectoForm\").submit()" })
    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })

</div>




