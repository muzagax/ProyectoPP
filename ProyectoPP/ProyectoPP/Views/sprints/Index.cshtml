@model ProyectoPP.Models.Sprint2

@{
    ViewBag.Title = "SprintPlanning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SprintPlanning</h2>

<div class="form-group">
    @Html.DisplayNameFor(model => model.proyectoId )
    @if (true)
    {
        string resp = Html.Action("EsEstudiante", "Roles").ToString();
        if (resp == "1")
        {
            <h4>@ViewBag.NombreProyecto</h4>
            //<button class="btn btn-default col-md-offset-10" onclick="location.href='@Url.Action("Create", "sprints")'">Nuevo Sprint</button>            
        }
        else
        {
            <button class="btn btn-default col-md-offset-10" onclick="location.href='@Url.Action("Create", "sprints", new {proyectoId = Model.proyectoId  } )'">Nuevo Sprint</button>
            
        }




    }

</div>



@using (Html.BeginForm("Actualizar", "sprint", FormMethod.Post, new { id = "proyectoForm" }))
{
    @Html.AntiForgeryToken()


    string resp = Html.Action("EsEstudiante", "Roles").ToString();
    if (resp != "1")
    {
        <div class="col-md-3">
            @Html.DropDownListFor(m => m.proyecto , (SelectList)ViewBag.Proyecto, "", htmlAttributes: new { @class = "form-control col-md-2", onchange = "$(\"#proyectoForm\").submit()" })
           

        </div>
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fechaInicio  )
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.proyecto.nombre)
        </th>
        <th></th>
    </tr>

    

</table>
