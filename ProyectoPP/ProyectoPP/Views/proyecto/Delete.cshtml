@model ProyectoPP.Models.proyecto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Proyecto</h2>

<h3>Está seguro que desa eliminar este proyecto?</h3>

<div>

    <h4>@Html.DisplayFor(model => model.nombre)</h4>

    <dl class="dl-horizontal">

        <dt>
            <label for="Nombre">Nombre</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <br />

        <dt>
            <label for="Descripcion">Descripción</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <br />

        <dt>
            <label for="FechaInicio">Fecha de inicio</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaInicio)
        </dd>

        <br />

        <dt>
            <label for="FechaFinal">Fecha final</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaFinal)
        </dd>

        <br />

        <dt>
            <label for="lider">Lider</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.persona1.nombre)
        </dd>

        <br />

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-default" />
                <button class="btn btn-default" onclick="location.href='@Url.Action("Details", "proyecto", new { id = Model.id })';return false;">Cancelar</button>
            </div>
        </div>
    }

    <br>

</div>




