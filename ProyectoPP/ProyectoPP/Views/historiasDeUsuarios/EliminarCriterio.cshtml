@model ProyectoPP.Models.criteriosDeAceptacion

@{
    ViewBag.Title = "EliminarCriterio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EliminarCriterio</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nombre</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            <label>Conexto</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contexto)
        </dd>

        <dt>
            <label>Evento</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.evento)
        </dd>

        <dt>
            <label>Resultado</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.resultado)
        </dd>

        <dt>
            <label>Número de Escenario</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroEscenario)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Aceptar" class="btn btn-default" />
            <input type="submit" value="Cancelar" class="btn btn-default" />
        </div>
    }
</div>
