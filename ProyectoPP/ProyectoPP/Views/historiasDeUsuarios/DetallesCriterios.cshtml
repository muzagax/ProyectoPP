@model ProyectoPP.Models.criteriosDeAceptacion

@{
    ViewBag.Title = "DetallesCriterios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DetallesCriterios</h2>

<div>
    <h4>Criterios De Aceptacion</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-offset-6 col-md-10">
            <!--Estos botones funcionan como los action links. Solo que el orden de los parametros es un poco distinto en el orden-->
            <button class="btn btn-default" onclick="location.href='@Url.Action("EditarCriterio", "historiasDeUsuarios", new { modelo = Model})'">Editar</button>
            <button class="btn btn-default" onclick="location.href='@Url.Action("EliminarCriterio", "historiasDeUsuarios", new { modelo = Model})'">Eliminar</button>
        </div>
    </div>

    <dl class="dl-horizontal">

        <dt>
            <label>Historia de Usuario</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.historiasDeUsuario.rol)
            <br>
        </dd>

        

        <dt>
            <label>Número de Escenario</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numeroEscenario)
            <br>
        </dd>

        <dt>
            <label>Nombre</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
            <br>
        </dd>

        <dt>
            <label>Contexto</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contexto)
            <br>
        </dd>

        <dt>
            <label>Evento</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.evento)
            <br>
        </dd>

        <dt>
            <label>Resultado</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.resultado)
            <br>
        </dd>
        

    </dl>
</div>
